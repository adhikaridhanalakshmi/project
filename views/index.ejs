<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script src="javascripts/captcha.js"></script>
<script src="javascripts/password.js"></script>
<link rel="stylesheet" href="../css/index.css">
<link rel="stylesheet" href="../css/Captcha.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<div class="container">
    <img src="../images/logo.png" alt="" id="logo">
    <div class="container-fluid">
    <div class="row mb-2">
        <form>
        <div class="col-4 col-sm-5  text-left">
            <label>User ID</label>
        </div>
        <div class="col-7 col-sm-5 col-lg-3">
            <input type="email" aria-label="Search" id="userid"/>
        </div>
    </div>
</form>
    <div class="row mb-2">
        <form>
          <div class="col-4 col-sm-5  text-left">
          <label>Password</label>
          </div>
          <div class="col-7 col-sm-5 col-lg-3">
          <input type="password" aria-label="Search" name="password" id="password" />
        </div>
          <i class="bi bi-eye-slash" id="togglePassword"></i>
    </div>
</form>
<div class="wrapper">
    <div class="captcha-area">
      <div class="captcha-img">
        <img src="images/captcha-bg.png" alt="">
        <span class="captcha"></span>
      </div>
      <button class="reload-btn" title="reload" type="button"><i class="fas fa-redo-alt"></i></button>
    </div>
    <form action="#" class="input-area">
      <input type="text" placeholder="Enter captcha" maxlength="6" spellcheck="false" required>
      <button class="check-btn" title="check" type="button">Check</button>
    </form>
    <div class="status-text"></div>
  </div>
  <div class="form-check">
    <input checked class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
    <label class="form-check-label" for="flexCheckDefault">
      Remember Me
    </label>
    <div class="errBlocklogin"></div>
  </div>
  <div class="forgetpassword">ForgotPassword</div>
<input type="button"  value="Login" class="login" onclick="readUserinfo()"/>
</form>
</div>
</div>  
</body>
</html>